package homework03;

import java.util.GregorianCalendar;

/**
 * A simple container class to store Item objects
 * 
 * @author thehoule and ccortello
 * @version 1/21/14.
 */
public class DatedItem<I> {

    private I item;
    private long quantity;
    private GregorianCalendar exp_date;

    public DatedItem(I item, long quantity, GregorianCalendar exp_date) {
    	
    	// Store parameters to fields
    	this.item=item;
    	this.quantity=quantity;
    	this.exp_date=exp_date;
    }
    
    /* Simple accessor methods to return field values */
    
    public I getItem() {
    	return item;
    }
    
    public long getQuantity() {
    	return quantity;
    }
    
    public String getDate() {
    	return exp_date;
    }
    
    /* Mutator method */
    
    public void setQuantity(long quantity) {
    	this.quantity=quantity;
    }
}